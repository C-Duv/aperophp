            </div>
        </div>
        <div class="control-group {% if dpAnonymousEForm.email.vars.errors|length %}error{% endif %}">
            {{ form_label(dpAnonymousEForm.email, null, { 'attr': {'class': 'control-label'} }) }}
            <div class="controls">
                {{ form_widget(dpAnonymousEForm.email) }}
                {{ form_errors(dpAnonymousEForm.email) }}
            </div>
