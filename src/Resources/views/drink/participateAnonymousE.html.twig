{% form_theme dpAnonymousEForm 'common/Form/fields.html.twig' %}

<form method="post" action="{{ url('_participatedrink', {'drinkId': drink.id}) }}" id="participateForm" class="form-horizontal" {{ form_enctype(dpAnonymousEForm) }}>
