            <div class="controls">
                {{ form_widget(dpAnonymousEForm.reminder) }}
                {{ form_errors(dpAnonymousEForm.reminder) }}
            </div>
        </div>
        {{ form_rest(dpAnonymousEForm) }}
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit">Participer</button>
        <a href="#" data-dismiss="modal" class="btn">Annuler</a>
    </div>
</form>
