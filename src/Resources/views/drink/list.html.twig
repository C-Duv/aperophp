{% extends "layout.html.twig" %}

{% block content %}
<div class="row">
    <div class="span8 offset4">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Quand</th>
                    <th>Où</th>
                    <th>Pour</th>
                    <th>Organisateur</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for drink in drinks %}
                <tr>
                    <td class="vmiddle">Le {{ drink.day|date("d") }} {{ drink.day|date("F")|trans }} {{ drink.day|date("Y") }}, à {{ drink.hour|date("H:i") }}</td>
                    <td class="vmiddle">A {{ drink.city.name }}, {{ drink.place }}</td>
                    <td class="vmiddle">{{ drink.kindTranslated }}</td>
                    <td class="vmiddle">{{ drink.user.email|replace({'@': '[at]'}) }}</td>
                    <td class="vmiddle">{{ drink.nbParticipations }}</td>
                    <td><a class="btn btn-small" href="{{ url('_showdrink', {'id': drink.id}) }}">Voir le détail &raquo;</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
