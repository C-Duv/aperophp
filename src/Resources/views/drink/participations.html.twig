<h2>Participants 
    {% if not isFinished %}
        {% if isParticipating %}
            <a class="btn pull-right" href="{{ url('_deleteparticipatedrink', {'drinkId': drink.id}) }}" >Se désinscrire</a>
            <a class="btn pull-right" data-toggle="modal" href="#participateModal" >Modifier</a>
        {% else %}
            <a class="btn pull-right" data-toggle="modal" href="#participateModal" >S'inscrire</a>
            {% if dpAnonymousEForm is not null %}
                <a class="btn pull-right" data-toggle="modal" href="#participateAnonymousEModal" >Modifier</a>
            {%endif%}
        {% endif %}

        <div class="modal hide fade" id="participateModal">
            {% include 'drink/participate.html.twig' %}
        </div>
        {% if dpAnonymousEForm is not null %}
            <div class="modal hide fade" id="participateAnonymousEModal">
                {% include 'drink/participateAnonymousE.html.twig' %}
            </div>
        {%endif%}
    {% endif %}
</h2>

<div class="row">
    <div class="span3 offset0">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Participant</th>
                    <th>Présence</th>
                </tr>
            </thead>
            <tbody>
                {% for participation in participations %}
                    <tr>
                        {% if participation.user.member is not null%}
                            <td class="vleft">{{ participation.user.member.username }}</td>
                        {% else %}
                            <td class="vleft">{{ participation.user.email|replace({'@': '[at]'}) }}</td>
                        {% endif %}
                        <td class="vright">{{ participation.percentage }} %</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="span3 offset0">
        Total : {{ participations|length }}
    </div>
</div>
