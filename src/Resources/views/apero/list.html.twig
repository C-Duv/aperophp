{% extends "layout.html.twig" %}

{% block content %}
<div class="row">
	<div class="span8 offset4">
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>Quand</th>
					<th>Où</th>
					<th>Pour</th>
					<th>Organisateur</th>
				</tr>
			</thead>
			<tbody>
				{% for drink in drinks %}
				<tr>
					<td>Le {{ drink.day|date("d F Y") }}, à {{ drink.hour|date("H:i") }}</td>
					<td>A {{ drink.city.name }}, {{ drink.place }}</td>
					<td>{{ drink.kindTranslated }}</td>
					<td>{{ drink.user.email|replace({'@': '[at]'}) }}</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}