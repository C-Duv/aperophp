{% form_theme commentForm 'common/Form/fields.html.twig' %}

<form method="post" action="{{ url('_createcomment', {'drinkId': drink.id}) }}" id="commentForm" class="form-horizontal" {{ form_enctype(commentForm) }}>
    <div class="modal-header">
        <a class="close" data-dismiss="modal">Ã—</a>
        <h3>Commentaire</h3>
    </div>
    <div class="modal-body">
        <div class="control-group {% if commentForm.lastname.vars.errors|length %}error{% endif %}">
            {{ form_label(commentForm.lastname, null, { 'attr': {'class': 'control-label'} }) }}
            <div class="controls">
                {{ form_widget(commentForm.lastname) }}
                {{ form_errors(commentForm.lastname) }}
            </div>
        </div>
        <div class="control-group {% if commentForm.firstname.vars.errors|length %}error{% endif %}">
            {{ form_label(commentForm.firstname, null, { 'attr': {'class': 'control-label'} }) }}
            <div class="controls">
                {{ form_widget(commentForm.firstname) }}
                {{ form_errors(commentForm.firstname) }}
            </div>
        </div>
        <div class="control-group {% if commentForm.email.vars.errors|length %}error{% endif %}">
            {{ form_label(commentForm.email, null, { 'attr': {'class': 'control-label'} }) }}
            <div class="controls">
                {{ form_widget(commentForm.email) }}
                {{ form_errors(commentForm.email) }}
            </div>
        </div>
        <div class="control-group {% if commentForm.content.vars.errors|length %}error{% endif %}">
            {{ form_label(commentForm.content, null, { 'attr': {'class': 'control-label'} }) }}
            <div class="controls">
                {{ form_widget(commentForm.content) }}
                {{ form_errors(commentForm.content) }}
            </div>
        </div>
        {{ form_rest(commentForm) }}
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" name="comment">Ajouter</button>
        <a href="#" data-dismiss="modal" class="btn">Annuler</a>
    </div>
</form>
